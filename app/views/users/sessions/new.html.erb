<div class='row'>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form col-md-offset-4 col-md-4'}) do |f| %>
<h2>Sign in</h2>
  <div class='form-group'>
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control', :autofocus => true %>
  </div>
  <div class='form-group'>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class='checkbox'>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
  </div>
  <div><%= f.submit "Sign in", class: 'btn btn-primary' %></div>
  <br/>
  <%= render "users/shared/links" %>
<% end %>
</div>

